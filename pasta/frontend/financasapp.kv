# frontend/financasapp.kv

#:import GerenciadorTelas telas.GerenciadorTelas
#:import LoginScreen telas.LoginScreen
#:import HomeScreen telas.HomeScreen

GerenciadorTelas:
    LoginScreen:
    HomeScreen:

<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(15)
        Label:
            text: 'Bem-vindo!'
            font_size: '32sp'
            size_hint_y: None
            height: self.texture_size[1]
        TextInput:
            id: login_input
            hint_text: 'Usu√°rio'
            multiline: False
            size_hint_y: None
            height: dp(40)
        TextInput:
            id: password_input
            hint_text: 'Senha'
            password: True
            multiline: False
            size_hint_y: None
            height: dp(40)
        Button:
            text: 'Entrar'
            size_hint_y: None
            height: dp(50)
            on_press: root.fazer_login()
        Label:
            text: ''

<HomeScreen>:
    name: 'home'
    Label:
        text: 'Login realizado com sucesso!'
        font_size: '24sp'