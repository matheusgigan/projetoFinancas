# frontend/financasapp.kv

GerenciadorTelas:
    LoginScreen:
        name: 'login'
    HomeScreen:
        name: 'home'

<LoginScreen>:
    # Damos um 'id' para os campos de texto para que o Python possa acessá-los
    id: login_screen

    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(15)

        Label:
            text: 'Bem-vindo!'
            font_size: '32sp'
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            id: login_input
            hint_text: 'Usuário'
            multiline: False
            size_hint_y: None
            height: dp(40)

        TextInput:
            id: password_input
            hint_text: 'Senha'
            password: True
            multiline: False
            size_hint_y: None
            height: dp(40)

        Button:
            text: 'Entrar'
            size_hint_y: None
            height: dp(50)
            # Ação mágica: ao pressionar, chama a função 'fazer_login' da classe LoginScreen
            on_press: root.fazer_login()

        Label: # Espaço em branco para empurrar tudo para cima
            text: ''